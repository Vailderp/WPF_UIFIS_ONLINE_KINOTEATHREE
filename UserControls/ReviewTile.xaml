<UserControl x:Class="Kinoteathree.UserControls.ReviewTile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kinoteathree.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="500" 
             Width="500" 
             Background="#FF2D2D2D"
             Margin="5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <WrapPanel Margin="10, 10, 0, 0">
            <TextBlock Text="Пользователь " Foreground="#FFC5C5C5" FontSize="18"></TextBlock>
            <TextBlock Name="TbUserName" Text="логин" Foreground="#FFC5C5C5" FontSize="18"></TextBlock>
        </WrapPanel>
        <local:LargeTextBox x:Name="LtbReviewText" Grid.Row="2" Margin="10"></local:LargeTextBox>
    </Grid>
</UserControl>
