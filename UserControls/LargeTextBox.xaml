<UserControl x:Class="Kinoteathree.UserControls.LargeTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kinoteathree.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="LayoutRoot">
    <Grid>
        <RichTextBox Background="{x:Null}" FontSize="{Binding Path=MultiTextFontSize, ElementName=LayoutRoot}" Foreground="#FFC5C5C5" VerticalAlignment="Center" HorizontalAlignment="Center" BorderBrush="{x:Null}">
            <FlowDocument Foreground="#FFC5C5C5">
                <Paragraph TextAlignment="Center" Foreground="#FFC5C5C5">
                    <Run Name="RunLargeTb" Text="{Binding Path=MultiText, ElementName=LayoutRoot }" Foreground="#FFC5C5C5"></Run>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
    </Grid>
</UserControl>
