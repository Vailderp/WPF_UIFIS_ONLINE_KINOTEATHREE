<UserControl x:Class="Kinoteathree.UserControls.ActorTile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kinoteathree.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="225" d:DesignWidth="150" Width="150" Height="225" Margin="5, 5, 5, 5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Border Name="BorderActorPhoto" Width="150" Height="200"></Border>
        <Label Name="LabelActorName" Content="Имя Фамилия" Grid.Row="1" Foreground="#FFC5C5C5" HorizontalAlignment="Left"></Label>
    </Grid>
</UserControl>
